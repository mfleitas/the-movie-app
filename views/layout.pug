body.bg-black
  header.header__wrapper
    
      
    
    nav.navbar.navbar--black
      .navbar__row
        .logo__wrapper 
          a.nav__link(href='/')
            img.navbar__logo-img(src='../images/logo.png')
        ul.navbar__nav.list-unstyled
          
            li.nav__item
              a.nav__link(href='/') Home
              
            li.nav__item.dropbtn-home
              a.nav__link(href='#') Movies
              ul.submenu.list-unstyled
                li.nav__item
                  a.nav__link(href="/movie/popular") Popular
                li.nav__item
                  a.nav__link(href="/movie/top_rated") Top Rated
                li.nav__item
                  a.nav__link(href="/movie/now_playing") Now Playing

            li.nav__item.dropbtn-home
              a.nav__link(href='#') TV Shows
              ul.submenu.list-unstyled
                li.nav__item
                  a.nav__link(href="/tv/popular") Popular
                li.nav__item
                  a.nav__link(href="/tv/top_rated") Top Rated
                li.nav__item
                  a.nav__link(href="/tv/on_the_air") On TV
            li
              form#searchForm.nav__search-form
                input#txtSearch.input__search(type='text',placeholder='Search Movie, TV Shows, or People ...')
                button#btnSubmit.search__submit(type='submit')
                  i.material-icons(style='margin-top: 4px') search
                  
  block content                  
  footer.footer-top(style='margint-top: -4px')
    
      ul.nav-social
        li.social-item
          a.social-link(href='mailto:email@website.com')
            i.fa.fa-envelope
        li.social-item
          a.social-link(href='https://www.facebook.com/')
            i.fa.fa-facebook
        li.social-item
          a.social-link(href='https:plus.google.com')
            i.fa.fa-google-plus
        li.social-item
          a.social-link(href='https://www.twitter.com')
            i.fa.fa-twitter
        li.social-item
          a.social-link(href='https://www.youtube.com')
            i.fa.fa-youtube
